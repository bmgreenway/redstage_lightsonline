<?xml version="1.0"?>
<layout version="1.0.0">
    <default>
        <block type="googleplusone/custom_button" name="custom.googleplusone" template="google/plusone/custom/button.phtml"/>
    </default>

    <cms_page>
        <reference name="content">
            <block type="googleplusone/cms_button" name="cms_page.googleplusone" template="google/plusone/button.phtml" before="-"/>
        </reference>
    </cms_page>

    <catalog_product_view>
        <reference name="content">
            <block type="googleplusone/catalog_product_button" name="product.info.googleplusone" template="google/plusone/button.phtml" before="-"/>
        </reference>
    </catalog_product_view>

    <catalog_category_default>
        <reference name="content">
            <block type="googleplusone/catalog_category_button" name="category_page.googleplusone" template="google/plusone/button.phtml" before="-"/>
        </reference>
    </catalog_category_default>

    <catalog_category_layered>
        <reference name="content">
            <block type="googleplusone/catalog_category_button" name="category_page.googleplusone" template="google/plusone/button.phtml" before="-"/>
        </reference>
    </catalog_category_layered>
</layout>