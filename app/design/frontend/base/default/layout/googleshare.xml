<?xml version="1.0"?>
<layout version="1.0.0">
    <default>
        <block type="googleshare/custom_button" name="custom.googleshare" template="google/share/custom/button.phtml"/>
    </default>

    <cms_page>
        <reference name="content">
            <block type="googleshare/cms_button" name="cms_page.googleshare" template="google/share/button.phtml" before="-"/>
        </reference>
    </cms_page>

    <catalog_product_view>
        <reference name="content">
            <block type="googleshare/catalog_product_button" name="product.info.googleshare" template="google/share/button.phtml" before="-"/>
        </reference>
    </catalog_product_view>

    <catalog_category_default>
        <reference name="content">
            <block type="googleshare/catalog_category_button" name="category_page.googleshare" template="google/share/button.phtml" before="-"/>
        </reference>
    </catalog_category_default>

    <catalog_category_layered>
        <reference name="content">
            <block type="googleshare/catalog_category_button" name="category_page.googleshare" template="google/share/button.phtml" before="-"/>
        </reference>
    </catalog_category_layered>
</layout>