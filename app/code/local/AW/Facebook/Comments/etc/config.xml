<?xml version="1.0"?>
<config>
	<modules>
		<AW_Facebook_Comments>
			<version>3.0.0</version>
		</AW_Facebook_Comments>
	</modules>
	<global>
		<blocks>
			<facebookcomments>
				<class>AW_Facebook_Comments_Block</class>
			</facebookcomments>
		</blocks>
		<models>
			<facebookcomments>
				<class>AW_Facebook_Comments_Model</class>
			</facebookcomments>
		</models>
		<helpers>
			<facebookcomments>
				<class>AW_Facebook_Comments_Helper</class>
			</facebookcomments>
		</helpers>
	</global>
	<adminhtml>
		<translate>
			<modules>
				<AW_Facebook_Comments>
					<files>
						<default>AW_Facebookcomments.csv</default>
					</files>
				</AW_Facebook_Comments>
			</modules>
		</translate>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<facebookcomments translate="title" module="facebookcomments">
											<title>Facebook Comments</title>
											<sort_order>100</sort_order>
										</facebookcomments>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	
	<frontend>
		<layout>
			<updates>
				<facebookcomments>
					<file>facebookcomments.xml</file>
				</facebookcomments>
			</updates>
		</layout>
	</frontend>

	<default>
		<facebookcomments>
			<general>
				<plugin_code>html5</plugin_code>
				<colorscheme>light</colorscheme>				
				<num_posts>10</num_posts>				
				<width>400</width>
			</general>
			<content>
				<show_in_cms>0</show_in_cms>				
				<show_in_home>0</show_in_home>
				<show_in_product>0</show_in_product>				
				<show_custom>0</show_custom>				
				<show_widget>0</show_widget>
			</content>
		</facebookcomments>
	</default>
</config>
