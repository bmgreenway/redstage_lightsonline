<?xml version="1.0"?>
<config>
    <modules>
        <AW_Facebook_Subscribe>
            <version>3.0.0</version>
        </AW_Facebook_Subscribe>
    </modules>

    <global>
        <blocks>
            <facebooksubscribe>
                <class>AW_Facebook_Subscribe_Block</class>
            </facebooksubscribe>
        </blocks>
        <models>
            <facebookcore>
                <class>AW_Facebook_Core_Model</class>
            </facebookcore>
            <facebooksubscribe>
                <class>AW_Facebook_Subscribe_Model</class>
            </facebooksubscribe>
        </models>
        <helpers>
            <facebooksubscribe>
                <class>AW_Facebook_Subscribe_Helper</class>
            </facebooksubscribe>
        </helpers>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <AW_Facebook_Subscribe>
                    <files>
                        <default>AW_Facebooksubscribe.csv</default>
                    </files>
                </AW_Facebook_Subscribe>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <facebooksubscribe>
                                            <title>Facebook "Subscribe" Button</title>
                                            <sort_order>100</sort_order>
                                        </facebooksubscribe>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <facebooksubscribe>
                    <file>facebooksubscribe.xml</file>
                </facebooksubscribe>
            </updates>
        </layout>
    </frontend>

    <default>
        <facebooksubscribe>
            <general>
                <plugin_code>html5</plugin_code>
                <href>http://www.facebook.com/aheadWorks</href>
                <layout>standard</layout>
                <colorscheme>light</colorscheme>
                <width>450</width>
            </general>
            <content>
                <show_in_cms>0</show_in_cms>
                <show_in_home>0</show_in_home>
                <show_in_category>0</show_in_category>
                <show_in_product>0</show_in_product>
                <show_custom>0</show_custom>
                <show_widget>0</show_widget>
            </content>
        </facebooksubscribe>
    </default>
</config>