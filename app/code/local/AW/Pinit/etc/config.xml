<?xml version="1.0"?>
<config>
	<modules>
		<AW_Pinit>
			<version>3.0.0</version>
		</AW_Pinit>
	</modules>
	<global>
		<blocks>
			<pinit>
				<class>AW_Pinit_Block</class>
			</pinit>
		</blocks>
		<models>			
			<pinit>
				<class>AW_Pinit_Model</class>
			</pinit>
		</models>
		<helpers>
			<pinit>
				<class>AW_Pinit_Helper</class>
			</pinit>
		</helpers>
	</global>

	<adminhtml>
		<translate>
			<modules>
				<AW_Pinit>
					<files>
						<default>AW_Pinit.csv</default>
					</files>
				</AW_Pinit>
			</modules>
		</translate>

		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<pinit translate="title" module="pinit">
											<title>Pin It Button</title>
											<sort_order>100</sort_order>
										</pinit>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	
	<frontend>
		<layout>
			<updates>
				<pinit>
					<file>pinit.xml</file>
				</pinit>
			</updates>
		</layout>
	</frontend>

	<default>
		<pinit>
			<general>
				<enable_extension>0</enable_extension>				
				<pin_count>horizontal</pin_count>
				<short_description>0</short_description>
				<use_price>0</use_price>
				<width>300</width>
			</general>
		</pinit>
	</default>
</config>